<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamGrowth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/systemStatusBarColor</item>
        <item name="android:navigationBarColor">@color/systemNavigationBarColor</item>
    </style>

    <style name="RalewayBold">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="RalewayRegular">
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <style name="PrimaryTextViewStyle" parent="RalewayRegular">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="RalewayRegular">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TertiaryTextViewStyle" parent="RalewayRegular">
        <item name="android:textColor">@color/yellow</item>
    </style>

</resources>