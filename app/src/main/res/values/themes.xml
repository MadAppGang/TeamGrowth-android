<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamGrowth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/systemStatusBarColor</item>
        <item name="android:navigationBarColor">@color/systemNavigationBarColor</item>
    </style>

    <style name="RalewayBold">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="RalewayRegular">
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <style name="PrimaryTextViewRegularStyle" parent="RalewayRegular">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SecondaryTextViewRegularStyle" parent="RalewayRegular">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TertiaryTextViewRegularStyle" parent="RalewayRegular">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="PrimaryTextViewBoldStyle" parent="RalewayBold">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SecondaryTextViewBoldStyle" parent="RalewayBold">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TertiaryTextViewBoldStyle" parent="RalewayBold">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

</resources>