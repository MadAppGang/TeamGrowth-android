<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.TeamGrowth">
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <!-- headers -->
    <style name="TextAppearance.TeamGrowth.Title1">
        <item name="android:fontFamily">@font/raleway_extra_bold</item>
        <item name="android:textSize">@dimen/size22</item>
    </style>

    <style name="TextAppearance.TeamGrowth.Title2">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">@dimen/size18</item>
    </style>

    <!-- bodies -->
    <style name="TextAppearance.TeamGrowth.Body1">
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="TextAppearance.TeamGrowth.Body2">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <!-- captions -->
    <style name="TextAppearance.TeamGrowth.Caption1">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
    </style>

    <style name="TextAppearance.TeamGrowth.Caption2">
        <item name="android:textSize">@dimen/size13</item>
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
    </style>

    <style name="TextAppearance.TeamGrowth.ErrorText">
        <item name="android:textSize">@dimen/size12</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <!-- button appearances -->
    <style name="TextAppearance.TeamGrowth.Button">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>