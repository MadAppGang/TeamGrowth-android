<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget"/>
    <style name="Widget.TeamGrowth"/>

    <!-- buttons styles -->
    <style name="Widget.TeamGrowth.Button1" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.TeamGrowth.Button2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.TeamGrowth.Button3" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- text view styles -->
    <style name="Widget.TeamGrowth.Text1">
        <item name="android:textColor">?attr/colorOnSurface1</item>
    </style>

    <style name="Widget.TeamGrowth.Text2">
        <item name="android:textColor">?attr/colorOnSurface2</item>
    </style>

    <style name="Widget.TeamGrowth.Text3">
        <item name="android:textColor">?attr/colorOnSurface3</item>
    </style>

    <style name="Widget.TeamGrowth.Text4">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- input text styles -->
    <style name="Widget.TeamGrowth.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="textAppearanceErrorText">?attr/textAppearanceErrorText</item>
        <item name="hintTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.TeamGrowth.EditText" parent="Widget.AppCompat.EditText"/>

    <!-- snackbar styles -->
    <style name="Widget.TeamGrowth.SnackBar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

</resources>